<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.User" table="DD_User" catalog="dbo">
        <id name="id" type="java.lang.Integer">
            <column name="Id" />
            <generator class="identity" />
        </id>
        <property name="name" type="string">
            <column name="Name" not-null="true" unique="true" />
        </property>
        <property name="password" type="string">
            <column name="Password" not-null="true" unique="true" />
        </property>
        <property name="emailId" type="string">
            <column name="EmailId" not-null="true" unique="true" />
        </property> 
        <property name="loggedIn" type="int">
            <column name="LoggedIn" not-null="false" unique="false" />
        </property>
                
    </class>
</hibernate-mapping>